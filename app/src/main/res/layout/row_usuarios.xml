<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/blue_900"
        android:elevation="10dp"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="5dp"
                android:id="@+id/img_user"
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <TextView
                android:shadowColor="@color/black"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:id="@+id/tv_user"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Nombre de usuario"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_add"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/green_500"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_agregar"
                android:text="Agregar">
            </Button>

            <Button
                android:id="@+id/btn_send"
                android:visibility="gone"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/green_100"
                android:drawableLeft="@drawable/ic_entregado"
                android:text="Solicitud enviada"
                android:textColor="@color/black"
                android:textSize="8dp"></Button>

            <Button
                android:id="@+id/btn_Tsolicitud"
                android:visibility="gone"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/teal_700"
                android:drawableLeft="@drawable/ic_send"
                android:text="Aceptar solicitud"
                android:textColor="@color/white"
                android:textSize="8dp"></Button>

            <Button
                android:id="@+id/btn_amigos"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/blue_A700"
                android:drawableLeft="@drawable/ic_usuarios"
                android:text="Agregado"
                android:textColor="@color/white"
                android:textSize="8dp"></Button>

            <ImageButton
                android:id="@+id/btn_eliminar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/button_cancel"
                android:scaleType="fitCenter" />

            <ProgressBar
                android:id="@+id/progresBar"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>